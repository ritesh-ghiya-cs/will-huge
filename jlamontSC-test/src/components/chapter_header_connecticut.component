<apex:component layout="none">
<apex:attribute name="chapterName" description="name of the chapter" default="Connecticut Chapter" type="String" required="required" />
<apex:attribute name="chapterLink" description="link to chapter home page" default="http://www.sierraclub.org/connecticut" type="String" required="required" />
<apex:attribute name="chapterBanner" description="link to chapter banner image" default="https://www.sierraclub.org/sites/www.sierraclub.org/files/styles/sc_entities_homepage/public/sce-uploads/headers/squantz-pond-209864_1920.jpg" type="String" required="required" />
<style>
.add-icons select {
    -webkit-appearance: none;
}
</style>
<!-- component: Begin Connecticut Header -->
    <header id="header" role="banner">
        <div id="header-constant">
            <div id="sc-logo"><a href="http://www.sierraclub.org/"><img src="//www.sierraclub.org/sites/www.sierraclub.org/themes/dotOrg/logo.png" /></a></div>
            <div id="slogan">EXPLORE, ENJOY, AND PROTECT THE PLANET</div>
        </div>
        <div id="header-entity">
            <div id="sc-entity-title">
                <div class="view view-sc-entity view-id-sc_entity view-display-id-entity_title">
                <div class="view-content"><a href="{!chapterLink}">{!chapterName}</a></div>
                </div>
            </div>
        </div>
        <div class="view view-sc-entity view-id-sc_entity">
            <div class="view-content">
                <img src="{!chapterBanner}" width="1120" height="214" alt="" />
            </div>
        </div>
    </header>
<!-- component: End Connecticut Header -->

</apex:component>