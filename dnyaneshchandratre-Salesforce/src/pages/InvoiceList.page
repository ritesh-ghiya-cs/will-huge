<apex:page controller="InvoiceListController">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockTable value="{!listOfLineItems}" var="lineItemIterator">
                <apex:column headerValue="Invoice Number">
                    <apex:outputLink value="/{!lineItemIterator.Invoice_Statement__r}">
                        {!lineItemIterator.Invoice_Statement__r.Name}
                    </apex:outputLink>
                </apex:column>
                <apex:column value="{!lineItemIterator.Invoice_Statement__r.Name__c}" 
                             headerValue="Name" />
                <apex:column value="{!lineItemIterator.Invoice_Statement__r.City__c}" 
                             headerValue="City" />
                <apex:column value="{!lineItemIterator.Invoice_Statement__r.Zip__c}"
                             headerValue="Zip" />
                <apex:column headervalue="Generate Invoice">
                    <apex:commandLink value="Generate" action="{!generate}" target="_blank">
                        <apex:param name="id" 
                                    value="{!lineItemIterator.Invoice_Statement__r.Id}" />
                    </apex:commandLink>
                </apex:column>
            </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>
</apex:page>